{
  "name": "@ft-trans/database",
  "version": "1.0.0",
  "description": "Shared Prisma database client for ft_transcendence",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./prisma": {
      "types": "./dist/prisma.service.d.ts",
      "import": "./dist/prisma.service.js",
      "require": "./dist/prisma.service.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "postinstall": "prisma generate --schema=../../prisma/schema.prisma || exit 0",
    "prisma:generate": "prisma generate --schema=../../prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=../../prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=../../prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=../../prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=../../prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=../../prisma/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "~6.19.0"
  },
  "devDependencies": {
    "prisma": "~6.19.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/common": {
      "optional": true
    },
    "@nestjs/core": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "prisma",
    "database",
    "ft_transcendence"
  ]
}
