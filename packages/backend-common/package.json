{
  "name": "@ft-trans/backend-common",
  "version": "1.0.0",
  "description": "Shared NestJS utilities and common code for ft_transcendence backend services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "import": "./dist/decorators/index.js",
      "require": "./dist/decorators/index.js"
    },
    "./guards": {
      "types": "./dist/guards/index.d.ts",
      "import": "./dist/guards/index.js",
      "require": "./dist/guards/index.js"
    },
    "./interceptors": {
      "types": "./dist/interceptors/index.d.ts",
      "import": "./dist/interceptors/index.js",
      "require": "./dist/interceptors/index.js"
    },
    "./filters": {
      "types": "./dist/filters/index.d.ts",
      "import": "./dist/filters/index.js",
      "require": "./dist/filters/index.js"
    },
    "./nats": {
      "types": "./dist/nats/index.d.ts",
      "import": "./dist/nats/index.js",
      "require": "./dist/nats/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/microservices": "^11.0.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.10",
    "@types/express": "^5.0.6"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "nestjs",
    "common",
    "utilities",
    "ft_transcendence"
  ]
}
