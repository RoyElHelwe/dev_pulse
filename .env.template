# ============================================
# ft_transcendence - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# Never commit .env to version control!

# ============================================
# Database
# ============================================
DATABASE_URL="postgresql://dev:dev@localhost:5432/ft_trans?schema=public"

# ============================================
# Redis
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# NATS Message Bus
# ============================================
NATS_URL="nats://localhost:4222"

# ============================================
# Authentication
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this"
SESSION_SECRET="your-super-secret-session-key-change-this"

# Session expiry (in seconds)
SESSION_MAX_AGE=604800  # 7 days

# ============================================
# OAuth Providers
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/callback/google"

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GITHUB_CALLBACK_URL="http://localhost:3000/api/auth/callback/github"

# 42 School OAuth (if applicable)
FORTYTWO_CLIENT_ID=""
FORTYTWO_CLIENT_SECRET=""
FORTYTWO_CALLBACK_URL="http://localhost:3000/api/auth/callback/42"

# ============================================
# Email Configuration
# ============================================
# For development (Mailpit)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@ft-transcendence.local"

# For production (e.g., SendGrid, AWS SES)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"
# SMTP_FROM="noreply@yourdomain.com"

# ============================================
# Application URLs
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_WS_URL="ws://localhost:4000"

# ============================================
# API Gateway
# ============================================
API_GATEWAY_PORT=4000
API_GATEWAY_HOST="0.0.0.0"

# ============================================
# Microservices Ports
# ============================================
AUTH_SERVICE_PORT=4001
WORKSPACE_SERVICE_PORT=4002
TASK_SERVICE_PORT=4003
GAME_SERVICE_PORT=4004
NOTIFICATIONS_SERVICE_PORT=4005
CHAT_SERVICE_PORT=4006

# ============================================
# Optional: AI Features (OpenAI)
# ============================================
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"

# ============================================
# Optional: Blockchain (Ethereum Testnet)
# ============================================
ETHEREUM_RPC_URL=""
ETHEREUM_PRIVATE_KEY=""
ETHEREUM_CONTRACT_ADDRESS=""

# ============================================
# Security
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# ============================================
# Logging
# ============================================
LOG_LEVEL="debug"  # debug, info, warn, error
LOG_FORMAT="json"  # json, pretty

# ============================================
# Node Environment
# ============================================
NODE_ENV="development"  # development, production, test
